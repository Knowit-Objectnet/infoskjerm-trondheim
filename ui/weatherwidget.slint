export struct Forecast {
    time: string,
    temp: string,
    icon: image,
    precipitation: string,
}

export global WeatherAdapter { 
    in property <[Forecast]> forecasts: [{
        time: "12:00",
        temp: "3.0",
        icon: @image-url("../img/weather/fog.png"),
        precipitation: "4.0"
    }];
}

component WeatherLine {
    in property <Forecast> forecast;
    HorizontalLayout {
        spacing: 1.5rem;
        alignment: center;
        Text {
            color: whitesmoke;
            text: forecast.time;
            font-size: 2rem;
        }

        Image {
            max-height: 3rem;
            max-width: 3rem;
            source: forecast.icon;
        }

        Text {
            color: whitesmoke;
            text: forecast.temp + "°c";
            font-size: 2rem;
        }

        Text {
            color: whitesmoke;
            text: forecast.precipitation + "mm";
            font-size: 2rem;
        }
    }
}

export component WeatherWidget { 
    VerticalLayout {
        alignment: start;
        padding-top: 2rem;
        Text {
            color: whitesmoke;
            font-size: 4rem;
            text: "Været i dag:";
            horizontal-alignment: center;
        }
        
        for f in WeatherAdapter.forecasts : WeatherLine {
           forecast: f;
        }
    }
    
 }